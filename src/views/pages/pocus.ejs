<!DOCTYPE html>
<html lang="ko">
  <head>
    <%- include("../include") %>

    <title>Pocus</title>

    <!-- axios cdn -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

    <script defer src="/js/webcam.js"></script>
  </head>
  <body class="d-flex align-items-center body_pocus bg_darkblack color_white">
    <input type="hidden" name="userid" id="userid" value="<%= userid %>" />
    <div id="upper" class="hidden"><%= isCorrect %></div>
    <input type="hidden" name="notiTime" value="<%= notiTime %>" />
    <main class="container">
      <h1 class="text-center">POCUS VIDEO ðŸ“¹</h1>

      <section class="row pocus_body">
        <article class="col-6 d-flex flex-column upper_box">
          <p class="text-center">Upper body</p>
          <div class="flex-grow-1">
            <div class="contentarea">
              <div class="camera">
                <video id="video">Video stream not available.</video>
                <!-- <button id="startbutton">Take photo</button> -->
              </div>
              <canvas id="canvas"> </canvas>
              <div class="d-none output">
                <!-- <div class="output"> -->
                <img
                  id="photo"
                  alt="The screen capture will appear in this box."
                />
              </div>
            </div>

            <!-- <video autoplay="true" id="videoElement"></video> -->
          </div>
        </article>
        <article class="h-100 col-6 d-flex flex-column lower_box">
          <p class="text-center">Lower body</p>
          <div class="flex-grow-1"></div>
        </article>
      </section>

      <div class="setting_btns">
        <span class="btn_power_off"><i class="fa-solid fa-power-off"></i></span>
        <span class="btn_gear"><i class="fa-solid fa-gear"></i></span>
      </div>
    </main>
  </body>
</html>
