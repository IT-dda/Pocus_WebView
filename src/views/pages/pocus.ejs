<!DOCTYPE html>
<html lang="ko">
  <head>
    <%- include("../include") %>

    <title>Pocus</title>
    <script defer src="/js/webcam.js"></script>
    <script defer src="/js/sensor.js"></script>
  </head>
  <body class="d-flex align-items-center body_pocus bg_darkblack color_white pocus_page">
    <input type="hidden" name="notiTime" value="<%= notiTime %>" />
    <main class="container">
      <h1 class="text-center">POCUS VIDEO ðŸ“¹</h1>

      <section class="row pocus_body">
        <article class="col-6 d-flex flex-column upper_box">
          <p class="text-center">Upper body</p>
          <div class="flex-grow-1">
            <video autoplay="true" id="videoElement"></video>
          </div>
        </article>
        <article class="h-100 col-6 d-flex flex-column lower_box">
          <p class="text-center">Lower body</p>
          <div class="flex-grow-1 sensor_box">
            <div class="sensors">
                <div class="sensor sensor_1"></div>
                <div class="sensor sensor_2"></div>
                <div class="sensor sensor_3"></div>
                <div class="sensor sensor_4"></div>
              </div>
          </div>
        </article>
      </section>

      <div class="setting_btns">
        <span class="btn_power_off"><i class="fa-solid fa-power-off"></i></span>
        <span class="btn_gear"><i class="fa-solid fa-gear"></i></span>
      </div>
    </main>
  </body>
</html>
